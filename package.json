{
  "name": "nestjs-papr",
  "version": "1.2.0",
  "description": "Papr integration for NestJS",
  "author": "Vitaliy Grusha",
  "keywords": [
    "nestjs",
    "mongodb",
    "database",
    "model",
    "schema",
    "json",
    "json-schema",
    "validation",
    "typescript",
    "types"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vitaliy-grusha/nestjs-papr"
  },
  "homepage": "https://github.com/vitaliy-grusha/nestjs-papr",
  "bugs": {
    "url": "https://github.com/vitaliy-grusha/nestjs-papr/issues/new"
  },
  "scripts": {
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "build": "tsc -p tsconfig.build.json",
    "test": "jest",
    "test:ci": "jest",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:watch": "jest --watch",
    "coverage": "yarn run test:cov && cat ./coverage/lcov.info | coveralls",
    "prepublish": "pnpm run build"
  },
  "dependencies": {
    "@nestjs/common": "^10.3.1",
    "@nestjs/core": "^10.3.1",
    "papr": "^15.1.0",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/platform-express": "^10.3.1",
    "@nestjs/testing": "^10.3.1",
    "@types/jest": "29.5.1",
    "@types/node": "18.16.12",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "29.5.0",
    "prettier": "^2.8.8",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.4",
    "ts-jest": "29.1.0",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "^5.3.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "peerDependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "mongodb": "^6.0.0",
    "papr": "^15.1.0"
  },
  "packageManager": "pnpm@8.6.0"
}
